{
    "name": "simple-bus/bernard-bundle-bridge",
    "type": "library",
    "description": "Use BernardBundle with SimpleBus/AsynchronousBundle.",
    "keywords": [ "bernard", "messages", "message bus", "event bus", "command bus" ],
    "homepage": "https://github.com/lakiboy/SimpleBusBernardBundleBridge",
    "license": "MIT",
    "authors": [
        { "name": "Dmitri Lakachauskis", "email": "dmitri@devmachine.net" }
    ],
    "require": {
        "php": ">=5.4.0",
        "simple-bus/message-bus": "~2.0",
        "simple-bus/asynchronous-bundle": "~2.0",
        "simple-bus/asynchronous": "~2.0",
        "bernard/bernard-bundle": "~1.1",
        "bernard/bernard": "1.0.*@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "symfony/console": "~2.4",
        "doctrine/dbal": "~2.4"
    },
    "suggests": {
        "ext-mcrypt": "Allows encryption of messages.",
        "simple-bus/jms-serializer-bundle-bridge": "Serialization of messages with JMS serializer."
    },
    "autoload": {
        "psr-4": { "SimpleBus\\BernardBundleBridge\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "SimpleBus\\BernardBundleBridge\\Tests\\": "tests" }
    },
    "config": {
        "bin-dir": "bin"
    }
}
